class Solution {
public:
    int minDepth(TreeNode* root) {
        if (root==NULL){
            return 0;
        }
        TreeNode *node=root;
        queue <TreeNode *> q;
        q.push(node);
        int count=0;
        while (!(q.empty())){
            int size=q.size();
            for (int i=0;i<size;i++){
                node=q.front();
                q.pop();
                if (node->left==NULL && node->right==NULL){
                    count++;
                    return count;
                }
                if (node->left!=NULL){
                    q.push(node->left);
                }
                if (node->right!=NULL){
                    q.push(node->right);
                }
            }
            count++;
        }
        return count;
    }
};
