class Solution {
public:
    bool isCousins(TreeNode* root, int x, int y) {
        queue <TreeNode *> q;
        q.push(root);
        while (!(q.empty())){
            int size=q.size();
            bool f1=false;
            bool f2=false;
            for (int i=0;i<size;i++){
                root=q.front();
                q.pop();
                if (root->val==x){
                    f1=true;
                }
                if (root->val==y){
                    f2=true;
                }
                if (root->left!=NULL && root->right!=NULL){
                    if ((root->left->val==x && root->right->val==y) || (root->left->val==y && root->right->val==x)){
                        return false;
                    }
                }
                if (root->left!=NULL){
                    q.push(root->left);
                }
                if (root->right!=NULL){
                    q.push(root->right);
                }
            }
            if (f1==true && f2==true){
                return true;
            }
        }
        return false;
        
    }
};
