class Solution {
public:
    int centeredSubarrays(vector<int>& nums) {
        int count=0;
        for (int i=0;i<nums.size();i++){
            for (int j=i;j<nums.size();j++){
                long long sum=0;
                int m=0;
                for (int k=i;k<=j;k++){
                    sum=sum+nums[k];
                    m=k;
                }
                for (int n=i;n<=m;n++){
                    if (nums[n]==sum){
                        count++;
                        break;
                    }
                }
            }
        }
        return count;
    }
};
