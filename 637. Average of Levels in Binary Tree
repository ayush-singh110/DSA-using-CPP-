class Solution {
public:
    vector<double> averageOfLevels(TreeNode* root) {
        queue <TreeNode *> q;
        TreeNode *n=root;
        q.push(root);
        vector <double> r;
        while (!(q.empty())){
            int size=q.size();
            long s=0;
            for (int i=0;i<size;i++){
                n=q.front();
                q.pop();
                s=s+n->val;
                if (n->left!=NULL){
                    q.push(n->left);
                }
                if (n->right!=NULL){
                    q.push(n->right);
                }
            }
            double avg=s/(double)size;
            r.push_back(avg);
        }
        return r;
    }
};
