class Solution {
public:
    int findBottomLeftValue(TreeNode* root) {
        if (root->left==NULL && root->right==NULL){
            return root->val;
        }
        vector <vector <int>> r;
        queue <TreeNode *> q;
        q.push(root);
        while (!(q.empty())){
            vector <int> j;
            int size=q.size();
            for (int i=0;i<size;i++){
                root=q.front();
                q.pop();
                j.push_back(root->val);
                if (root->left!=NULL){
                    q.push(root->left);
                }
                if (root->right!=NULL){
                    q.push(root->right);
                }
            }
            r.push_back(j);
        }
        return r[r.size()-1][0];
    }
};
