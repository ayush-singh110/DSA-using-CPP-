class Solution {
private:
    void cs(int ind,int target, vector <int> &candidates,vector <int> &ds,vector <vector <int>> &ans){
        if (ind==candidates.size()){
            if (target==0){
                ans.push_back(ds);
            }
            return;
        }
        if (candidates[ind]<=target){
            ds.push_back(candidates[ind]);
            cs(ind+1,target-candidates[ind],candidates,ds,ans);
            ds.pop_back();
        }
        int next=ind+1;
        while (next<candidates.size() && candidates[next]==candidates[ind]){
            next++;
        }
        cs(next,target,candidates,ds,ans);
    }
public:
    vector<vector<int>> combinationSum2(vector<int>& candidates, int target) {
        sort(candidates.begin(),candidates.end());
        vector <int> ds;
        vector <vector <int>> ans;
        cs(0,target,candidates,ds,ans);
        return ans;
    }
};
