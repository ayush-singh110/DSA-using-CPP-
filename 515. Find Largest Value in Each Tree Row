class Solution {
public:
    vector<int> largestValues(TreeNode* root) {
        if (root==NULL){
            return {};
        }
        queue <TreeNode *> q;
        q.push(root);
        vector <int> r;
        while (!(q.empty())){
            int size=q.size();
            int m=INT_MIN;
            for (int i=0;i<size;i++){
                root=q.front();
                q.pop();
                m=max(m,root->val);
                if (root->left!=NULL){
                    q.push(root->left);
                }
                if (root->right!=NULL){
                    q.push(root->right);
                }
            }
            r.push_back(m);
        }
        return r;
    }
};
