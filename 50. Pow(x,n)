class Solution {
double npow(double x,long long n){
    if (n==0){
        return 1.0;
    }
    double half=npow(x,n/2);
    if (n%2==0){
        return half*half;
    }
    return half*half*x;
}
public:
    double myPow(double x, int n) {
        if (n==0){
            return 1.0;
        }
        long long N=n;
        if (N<0){
            x=1/x;
            N=-N;
        }
        return npow(x,N);
    }
};
