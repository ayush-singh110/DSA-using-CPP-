class Solution {
public:
    vector<vector<int>> levelOrder(TreeNode* root) {
        if (root==NULL){
            return {};
        }
        vector <vector <int>> r;
        queue<TreeNode *> q;
        q.push(root);
        while (!(q.empty())){
            vector <int> ans;
            int size=q.size();
            for (int i=0;i<size;i++){
                TreeNode *node=q.front();
                q.pop();
                ans.push_back(node->val);
                if (node->left!=NULL){
                    q.push(node->left);
                }
                if (node->right!=NULL){
                    q.push(node->right);
                }
            }
            r.push_back(ans);
        }
        return r;
    }
};
