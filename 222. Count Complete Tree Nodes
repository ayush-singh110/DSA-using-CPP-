class Solution {
public:
    int countNodes(TreeNode* root) {
        if (root==NULL){
            return 0;
        }
        if (root->left==NULL && root->right==NULL){
            return 1;
        }
        queue <TreeNode *> q;
        TreeNode *node=root;
        q.push(node);
        int count=0;
        while (!(q.empty())){
            int size=q.size();
            count=count+size;
            for (int i=0;i<size;i++){
                node=q.front();
                q.pop();
                if (node->left!=NULL){
                    q.push(node->left);
                }
                if (node->right!=NULL){
                    q.push(node->right);
                }
            }
        }
        return count;
    }
};
