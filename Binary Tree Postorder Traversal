class Solution {
private:
    void postorder(TreeNode *node, vector <int> &r){
        if (node==NULL){
            return ;
        }
        postorder(node->left,r);
        postorder(node->right,r);
        r.push_back(node->val);
    }
public:
    vector<int> postorderTraversal(TreeNode* root) {
        vector <int> r;
        TreeNode *node=root;
        postorder(node,r);
        return r;
    }
};
